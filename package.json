{
  "name": "quickfix-renderer-workspace",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "pnpm -C examples/minimal-viewer dev",
    "build": "pnpm run build:wasm && pnpm run build:bundle",
    "build:wasm": "wasm-pack build --target web --out-dir pkg quickfix-renderer",
    "build:bundle": "pnpm -C examples/minimal-viewer build",
    "preview": "pnpm -C examples/minimal-viewer preview"
  },
  "devDependencies": {
    "vite": "^5.0.0",
    "wasm-pack": "^0.12.1",
    "typescript": "^5.0.0"
  }
}